<div class="container">
  
  <% if (defined? breadcrumbs) != nil %><%= erb :"partials/breadcrumbs", :locals => { :breadcrumbs => breadcrumbs } %><% end %>
  
  <div class="row">
    <h1 class="inline"><img src="/images/<%= mode == "tv"? "tv-small.png" : "radio-small.png" %>" alt="<%= mode %>">Report</h1>
  </div>
  
  <% if !data.nil? && data.has_key?(:results) && !data[:results].nil? && data[:results].length > 0 %>
  <div class="row">
    <%= erb :"partials/paging", :locals => { :page => data[:page], :page_count => data[:page_count] } %>
  </div>
  <div class="row">
    <table id="report-table" class="data-table" width="100%" cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Filler Name</th>
          <th>Station Name</th>
          <th>Date</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
      <% data[:results].each do |filler| %>
        <tr>
          <td><%= filler.filler_name %></td>
          <td><%= filler.station_name %></td>
          <td><%= filler.date.strftime('%d/%m/%Y') %></td>
          <td><%= filler.time_of_day %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="row">
    <p class="instruction">No data found for the criteria, enter different criteria and try again</p>
  </div>
  <% end %>
</div>