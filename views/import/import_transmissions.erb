<div class="container">

  <%= erb :"partials/breadcrumbs_heading", :locals => { :breadcrumbs => breadcrumbs, :mode => mode, :heading => 'Import Transmissions' } %>

  <div class="row"><p class="instruction"><%= mode == 'tv' ? CsvParserTv::INSTRUCTION_TEXT : CsvParserRadio::INSTRUCTION_TEXT %></p></div>
  
  <div class="row">
    <form enctype="multipart/form-data" encoding="multipart/form-data" method="post" action="/<%= mode%>/import/transmissions">
      <input type="file" name="datafile" size="100">
      <button type="submit" name="action" value="send">Send</button>
    </form>
  </div>
  
  <div class="row">
    <h2>Clear all <%= mode%> data</h2>
    <p class="warning">WARNING - This will clear all <%= mode %> data in the system</p>
    <form enctype="multipart/form-data" encoding="multipart/form-data" method="post" action="/<%= mode%>/import/transmissions/clear">
      <button type="submit" name="action" value="send">Clear all data</button>
    </form>
  </div>
</div>